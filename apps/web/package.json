{
  "name": "@ph/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "test": "NODE_ENV=test bun test --preload ./src/tests/tests.setup.ts",
    "test:coverage": "bun run test --coverage",
    "test:e2e": "NODE_ENV=test playwright test",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:kit": "drizzle-kit",
    "db:seed": "bun --bun run ./src/server/db/seed.ts",
    "db:cleanup": "bun --bun run ./src/server/db/cleanup.ts",
    "lint": "biome lint ./src",
    "check": "biome check ./src",
    "check:apply-safe": "biome check --apply ./src",
    "check:apply-unsafe": "biome check --apply-unsafe ./src",
    "format": "biome format ./src",
    "format:write": "biome format --write ./src",
    "typecheck": "tsc -p ./tsconfig.json"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.0.9",
    "@ph/ui": "workspace:*",
    "@ph/utils": "workspace:*",
    "@t3-oss/env-nextjs": "^0.10.1",
    "@tanstack/react-query": "^5.36.0",
    "@tanstack/react-query-devtools": "^5.36.0",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "drizzle-orm": "^0.30.10",
    "geist": "^1.3.0",
    "next": "14.2.3",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^14.11.0",
    "@ph/config": "workspace:*",
    "@playwright/test": "^1.44.0",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "drizzle-kit": "^0.21.1",
    "msw": "^2.3.0",
    "pg": "^8.11.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.3",
    "typescript": "^5"
  }
}
